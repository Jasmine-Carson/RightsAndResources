<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <TextView
            android:id="@+id/title_text_view"
            android:background="#D81B60"
            android:textColor="#FAFAFA"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:text="Mental Illness"
            android:gravity="center"
            android:textSize="38sp"
            />
        <TextView
            android:id="@+id/disclaimer_text_view"
            android:background="#607D8B"
            android:textColor="#FAFAFA"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_below="@id/title_text_view"
            android:layout_height="120dp"
            android:gravity="center"
            android:text="The information on this site is not intended or implied to be a substitute for professional medical advice, diagnosis or treatment. All content, including text, graphics, images and information, contained on or available through this application is for general information purposes only. If you have a medical emergency, call your doctor or 911 immediately."
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/nspl_text_view"
            android:layout_below="@id/disclaimer_text_view"
            android:background="#F48FB1"
            android:textColor="#FCE4EC"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:text=" National Suicide Prevention Line:  1-800-273-8255"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:id="@+id/online_chat"
            android:paddingLeft="1dp"
            android:layout_below="@id/nspl_text_view"
            android:text="24 Online Chat:
  www.iprevail.com/chat_landing"
            android:textStyle="bold"
            android:background="#AD1457"
            android:textColor="#000"
            android:textSize="25sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/insurance_policies"
            android:layout_below="@id/online_chat"
            android:textSize="22sp"
            android:padding="10dp"
            android:background="#F48FB1"
            android:textColor="#FCE4EC"
            android:text="Insurance policies and mental illnesses:"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/insurance_policies"
            android:background="#AD1457"
            android:textColor="#000"
            android:id="@+id/law"
            android:textSize="20sp"
            android:padding="10dp"
            android:gravity="center"
            android:text="In 2008 Paul Wellstone and Pete Domenici Mental Health Parity was passed, this act requires coverage of mental health, behavioral health and substance-use disorders to be comparable to physical health coverage."
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/law"
            android:background="#F48FB1"
            android:textColor="#FCE4EC"
            android:id="@+id/what_law_do"
            android:textSize="20sp"
            android:padding="10dp"
            android:text="What does the law do?
•This law requires insurance companies to treat mental and behavioral health and substance use disorders equal to or better than medical/surgical coverage.
Ex. Insurance companies can’t charge $40 copay for mental health professionals such as a psychologist if it charges $20 for medical/surgical visits.
•Removes a limit on the number of mental health visits per year.
"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/what_law_do"
            android:id="@+id/health_plans"
            android:background="#D81B60"
            android:textColor="#FAFAFA"
            android:text="What health plans apply?
•Employer-sponsored health coverage, with companies with 50 or more workers.
•Coverage purchased through health insurance exchanges that were created under the health care reform A.K.A. Affordable Act or “Obamacare”.
•Children’s Health Insurance Program
•Most medicaid programs (requirements may vary. Contact Medicaid for confirmation)
"
            android:textSize="20sp"
            android:padding="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/how_to_know"
            android:background="#607D8B"
            android:textColor="#FAFAFA"
            android:text="How to know if your health insurance provides mental health coverage?
Check description of plan benefits - should show info on behavioral health benefits, mental health and substance use disorders. If still not sure, ask your human resources representative or contact your insurance company directly.
"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_below="@+id/health_plans"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/how_to_know"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="#AD1457"
            android:textColor="#000"
            android:text="*If you or someone you know is having a psychological emergency, please call 911*
"
            />




    </RelativeLayout>

</ScrollView>