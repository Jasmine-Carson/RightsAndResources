<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000"
            android:text="Sexual Assault - Resources"
            android:textColor="#ff0000"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:text="-The National Sexual Assault Hotline at 800-656-4673 can walk you through the reporting process and assist you in getting help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Health centers cannot charge up front for rape kits."
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Talk to your local support center! https://centers.rainn.org"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
