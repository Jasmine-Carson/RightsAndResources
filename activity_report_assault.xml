<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000"
            android:text="Sexual Assault - Reporting"
            android:textColor="#ff0000"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:text="-If you are in immediate danger, call 911."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp" />
        
        <TextView
            android:text="-You can call or visit local police or go to a medical center (if being treated for related injuries) to report assault."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp" />
        
        <TextView
            android:text="-Stick with other people."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-The statute of limitations, or time limit to go to court, is 6 years for most sexual assault crimes."
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Stay aware."
            android:textColor="#000000"
            android:textSize="16sp" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-You should report sooner rather than later."
            android:textColor="#000000"
            android:textSize="16sp" />      
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Attempted rape is also a crime that can be prosecuted."
            android:textColor="#000000"
            android:textSize="16sp" />   
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-You can get a rape kit without reporting if you donâ€™t want to."
            android:textColor="#000000"
            android:textSize="16sp" /> 
        
         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Sexual assault is ALWAYS a crime and should be reported."
            android:textColor="#000000"
            android:textSize="16sp" />             

    </LinearLayout>
</ScrollView>
