<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">


        <TextView
            android:textColor="#837edc"
            android:text="What to do if a friend is in an abusive relationship:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="#FFFFFF"/>


         <TextView
             android:textColor="#000000"
             android:text="@string/always_be_supportive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="#FFFFFF" />
        <TextView
            android:textColor="#000000"
            android:text="--Don't say you should have told be sooner' or 'why did you let it get this far'"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"  />

        <TextView
            android:textColor="#000000"
            android:text="--Tell them you want to help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textSize="20sp"  />
        <TextView

        android:text="--Percistently remind them that this isn't their fault"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="#FFFFFF"/>


        <TextView
            android:textColor="#000000"
            android:text="--Help them create a safe word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="#FFFFFF"/>


        <TextView
            android:textColor="#000000"
            android:text="believe_them"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="#FFFFFF" />

        <TextView
            android:textColor="#000000"
            android:text="--Don't tell people or spread rumors if i gets back to the abuser it could make the situation worse for the victim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textSize="20sp"  />
        <TextView

            android:text="--Percistently remind them that this isn't their fault"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="#FFFFFF"/>


        <TextView
            android:textColor="#0000000"
            android:text="@string/don_t_blame_or_acuse_them"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--Don't contact the abuser or post about the situation onlibneit could make it worse for the victim"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="--Help them create a saftey plan by possibly using safehorizen.org"
            android:textColor="#0000000"
            android:textSize="20sp" />

        <TextView
            android:textColor="#0000000"
            android:text="--Don't say you should have told be sooner' or 'why did you let it get this far'"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"  />

    </LinearLayout>
</ScrollView>
