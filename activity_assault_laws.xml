<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EBF5FB"
            android:text="Sexual Assault - Laws"
            android:textColor="#566573"
            android:textSize="34sp" />

        <TextView
            android:text="-Sexual harassment violates Title VII of the Civil Rights Act of 1964."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#566573"
            android:background="#AED6F1"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Sexual assault is defined as subjecting the victim to unwanted/offensive sexual touching."
            android:textColor="#566573"
            android:background="#AED6F1"                  
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Conversations between an assault survivor and their counselor can be requested to be kept private."
            android:textColor="#566573"
            android:background="#AED6F1"                  
            android:textSize="20sp" />
 <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="
                          
                          
                          
                          
                          
                          
                          
                          
                          
                          
                          
                          
                          
                          
                          
                          
                          
